{
  "name": "dealer-backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "dev": "NODE_ENV=development npm run watch ./src/bin/www",
    "prod": "NODE_ENV=production node ./dist/bin/www",
    "build": "npm run clean && babel ./src --out-dir dist",
    "deploy": "npm run clean && bash deploy",
    "clean": "rimraf dist",
    "watch": "nodemon --config ./nodemon.json --",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.4.4",
    "@hapi/joi": "^16.1.8",
    "@hapi/joi-date": "^2.0.1",
    "aws-sdk": "^2.514.0",
    "bcrypt": "^5.0.0",
    "bigint-hash": "^0.2.2",
    "config": "^3.2.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "^4.16.4",
    "joi-objectid": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.13",
    "morgan": "~1.9.0",
    "node-fetch": "^2.6.0",
    "poker-odds-calculator": "^0.3.1",
    "rimraf": "^2.6.3",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.2",
    "gulp": "^4.0.2",
    "gulp-zip": "^5.0.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^1.19.0",
    "yargs": "^14.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
